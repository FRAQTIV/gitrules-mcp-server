{
  "name": "@fraqtiv/git-rules-mcp",
  "version": "1.1.1",
  "description": "Simple MCP server for Git rules compliance and workflow validation.",
  "type": "module",
  "license": "MIT",
  "private": false,
  "main": "./dist/index.js",
  "bin": {
    "mcp-git-rules": "./bin/mcp-git-rules"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "ts-node src/index.ts",
    "lint": "eslint . --ext .ts",
    "test": "npm run build && node dist/index.js --test",
    "pack": "npm pack",
    "prepublishOnly": "npm run lint && npm run build && npm run postbuild",
    "postbuild": "node scripts/postbuild.js"
  },
  "keywords": [
    "mcp",
    "git",
    "rules",
    "compliance",
    "workflow"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FRAQTIV/gitrules-mcp-server.git"
  },
  "dependencies": {
  "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^8.57.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0"
  }
}
