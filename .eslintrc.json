{
  "root": true,
  "env": { "es2022": true, "node": true },
  "parser": "@typescript-eslint/parser",
  "parserOptions": { 
    "ecmaVersion": 2022, 
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended"
  ],
  "plugins": ["@typescript-eslint"],
  "ignorePatterns": ["dist"],
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "@typescript-eslint/no-explicit-any": "off"
  }
}
